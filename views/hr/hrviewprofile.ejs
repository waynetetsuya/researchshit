<!DOCTYPE html>
<html>
<head>
  <title>HR Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    body {
      display: flex;
      min-height: 100vh;
      background-color: #1a1a1a;
      color: white;
    }
    
    .sidebar {
      width: 240px;
      background-color: #222;
      padding: 20px 0;
      display: flex;
      flex-direction: column;
    }
    
    .logo-container {
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px 0;
    }
    
    .logo {
      width: 60px;
      height: 60px;
      background-color: #333;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      color: white;
      font-weight: bold;
    }
    
    .nav-item {
      display: flex;
      align-items: center;
      padding: 15px 25px;
      color: #aaa;
      text-decoration: none;
      margin: 5px 0;
      transition: all 0.3s;
    }
    
    .nav-item.active {
      background-color: #333;
      color: white;
      border-radius: 5px;
      margin: 5px 10px;
    }
    
    .nav-item:hover {
      background-color: #333;
      color: white;
      border-radius: 5px;
      margin: 5px 10px;
    }
    
    .nav-icon {
      margin-right: 10px;
      font-size: 20px;
    }
    
    .main-content {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
      height: 80px;
      background-color: #000;
    }
    
    .page-title {
      font-size: 24px;
      font-weight: normal;
    }
    
    .user-info {
      display: flex;
      align-items: center;
    }
    
    .user-name {
      margin-right: 15px;
      text-align: right;
    }
    
    .user-role {
      background-color: #2c5a43;
      color: white;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 12px;
      display: inline-block;
    }
    
    .user-avatar {
      width: 50px;
      height: 50px;
      background-color: #fff;
      border-radius: 50%;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .content {
      flex: 1;
      padding: 20px;
    }
    
    .spacer {
      flex: 1;
    }
    
    .menu-button {
      background: none;
      border: none;
      color: white;
      font-size: 24px;
      cursor: pointer;
    }

     /* Main content styles */
     .main-content {
            flex: 1;
            padding: 0;
        }
        
        .header {
            padding: 15px 20px;
            background-color: #202020;
            border-bottom: 1px solid #333;
        }
        
        .header h2 {
            font-size: 18px;
            font-weight: normal;
        }
        
        .professor-card {
            background-color: #262626;
            margin: 20px;
            border-radius: 10px;
            padding: 20px;
        }
        
        .professor-info {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .professor-avatar {
            width: 60px;
            height: 60px;
            background-color: #333;
            border-radius: 50%;
            margin-right: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .professor-details {
            flex: 1;
        }
        
        .professor-name {
            font-size: 20px;
            margin-bottom: 10px;
        }
        
        .details-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }
        
        .subject-select {
            display: flex;
            align-items: center;
            background-color: #333;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
        }
        
        .subject-select i {
            margin-left: 10px;
        }
        
        .email {
            color: #aaa;
        }
        
        .attendance-report {
            display: flex;
            align-items: center;
            cursor: pointer;
        }
        
        .attendance-report i {
            margin-left: 10px;
            font-size: 18px;
        }
        
        .status-boxes {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        
        .status-box {
            background-color: #333;
            border-radius: 10px;
            padding: 15px;
            width: 23%;
            display: flex;
            align-items: center;
        }
        
        .status-icon {
            width: 40px;
            height: 40px;
            background-color: #444;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 15px;
        }
        
        .status-info {
            flex: 1;
        }
        
        .status-label {
            font-size: 12px;
            color: #aaa;
            margin-bottom: 5px;
        }
        
        .status-value {
            font-size: 14px;
        }
        
        .active-status {
            display: flex;
            align-items: center;
        }
        
        .active-dot {
            width: 10px;
            height: 10px;
            background-color: #4CAF50;
            border-radius: 50%;
            margin-right: 5px;
        }
        
        /* Attendance History */
        .attendance-history {
            padding: 20px;
            background-color: #262626;
            margin: 0 20px 20px;
            border-radius: 10px;
        }
        
        .history-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }
        
        .history-actions {
            display: flex;
        }
        
        .history-action {
            background-color: #333;
            border-radius: 5px;
            padding: 8px 15px;
            margin-left: 10px;
            cursor: pointer;
            display: flex;
            align-items: center;
        }
        
        .history-action i {
            margin-right: 5px;
        }
        
        .attendance-records {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .attendance-record {
            background-color: #333;
            border-radius: 10px;
            padding: 15px;
            width: calc(50% - 8px);
        }
        
        .record-date {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .record-date i {
            margin-right: 10px;
        }
        
        .record-status {
            background-color: #4CAF50;
            color: white;
            padding: 5px 15px;
            border-radius: 15px;
            font-size: 12px;
            margin-left: auto;
        }
        
        .record-status.late {
            background-color: #FFC107;
        }
        
        .record-status.absent {
            background-color: #F44336;
        }
        
        .record-times {
            display: flex;
            justify-content: space-between;
        }
        
        .time-group {
            width: 48%;
        }
        
        .time-label {
            font-size: 12px;
            color: #aaa;
            margin-bottom: 5px;
        }
    
    @media (max-width: 768px) {
      .sidebar {
        width: 70px;
      }
      
      .nav-item span {
        display: none;
      }
      
      .nav-icon {
        margin-right: 0;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo-container">
      <div class="logo"><img src="/IMAGES/CEULOGO.png" width="70" height="70"></div>
    </div>
    
    <a href="/dashboard/hr" class="nav-item">
      <div class="nav-icon">‚äû</div>
      <span>Dashboard</span>
    </a>
    
    <a href="/hr/professors" class="nav-item active">
      <div class="nav-icon">üë®‚Äçüè´</div>
      <span>Professors</span>
    </a>
  
    <div class="spacer"></div>
    
    <a href="/settings" class="nav-item">
      <div class="nav-icon">‚öôÔ∏è</div>
      <span>Settings</span>
    </a>
    
    <a href="/logout" class="nav-item">
      <div class="nav-icon">üö™</div>
      <span>Log Out</span>
    </a>
    
    <a href="/help" class="nav-item">
      <div class="nav-icon">‚ùì</div>
      <span>Help</span>
    </a>
  </div>
  
  <!-- Main Content -->
  <div class="main-content">
    <!-- Header -->
    <div class="header">
      <h1 class="page-title">Professor Profile</h1>
      <div class="user-info">
        <div class="user-name">
          <%= user.username.toUpperCase() %>
          <div class="user-role">HR</div>
        </div>
        <div class="user-avatar">
          <svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2">
            <circle cx="12" cy="8" r="5"></circle>
            <path d="M3 21v-2a7 7 0 0 1 14 0v2"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Back Button -->
    <div class="content">
      <div class="back-button">
        <a href="/HR/professors" class="back-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="24" height="24">
            <path d="M19 12H5M12 19l-7-7 7-7"></path>
          </svg>
        </a>
      </div>

      <!-- Real-Time BLE Presence Info -->
<div class="professor-card" style="margin-top: 20px;">
  <h3 style="margin-bottom: 10px;">üì° Real-Time BLE Presence</h3>
  <div class="details-row">
    <div class="subject-select">
      <strong>RSSI:</strong> <span id="live-rssi">--</span> dBm
    </div>
    <div class="subject-select">
      <strong>Distance:</strong> <span id="live-distance">--</span> m
    </div>
    <div class="subject-select">
      <strong>Status:</strong> <span id="live-state">--</span>
    </div>
  </div>
</div>

      <!-- Profile Section -->
      <div class="professor-card">
        <div class="professor-info">
          <div class="professor-avatar">
            <svg viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" width="30" height="30">
              <circle cx="12" cy="8" r="5"></circle>
              <path d="M3 21v-2a7 7 0 0114 0v2"></path>
            </svg>
          </div>
          <div class="professor-details">
            <h3 class="professor-name"><%= professor.firstname %> <%= professor.lastname %></h3>
            <div class="details-row">
              <div class="subject">
                <span>Subject</span>
                <div class="subject-select">
                  <%= professor.subject_name || 'Not Assigned' %>
                </div>
              </div>
              <div class="email">
                <span>Email Address</span>
                <div><%= professor.email %></div>
              </div>
              <div class="attendance-report">
                <span>Status</span>
                <div class="subject-select"><%= professor.status || 'Active' %></div>
              </div>
            </div>
          </div>
        </div>

        <div class="status-boxes">
          <div class="status-box">
            <div class="status-icon">
              <i class="fas fa-door-open"></i>
            </div>
            <div class="status-info">
              <div class="status-label">Room</div>
              <div class="status-value"><%= professor.room || '301' %></div>
            </div>
          </div>

          <div class="status-box">
            <div class="status-icon">
              <i class="fas fa-sign-in-alt"></i>
            </div>
            <div class="status-info">
              <div class="status-label">Check In Time</div>
              <div class="status-value"><%= professor.checkInTime || '8:00 A.M.' %></div>
            </div>
          </div>

          <div class="status-box">
            <div class="status-icon">
              <i class="fas fa-sign-out-alt"></i>
            </div>
            <div class="status-info">
              <div class="status-label">Check Out Time</div>
              <div class="status-value"><%= professor.checkOutTime || '12:30 P.M.' %></div>
            </div>
          </div>

          <div class="status-box">
            <div class="status-icon">
              <i class="fas fa-circle-notch"></i>
            </div>
            <div class="status-info">
              <div class="status-label">Status</div>
              <div class="status-value">
                <div class="active-status">
                  <div class="active-dot"></div>
                  <%= professor.status || 'Active' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Attendance History -->
      <div class="attendance-history">
        <div class="history-header">
          <h3>Attendance History</h3>
          <div class="history-actions">
            <div class="history-action"><i class="fas fa-sort"></i>Sort</div>
            <div class="history-action"><i class="fas fa-filter"></i>Filter</div>
          </div>
        </div>

        <div class="attendance-records">
          <% if (attendanceHistory && attendanceHistory.length > 0) { %>
            <% attendanceHistory.forEach(record => { %>
              <div class="attendance-record">
                <div class="record-date">
                  <i class="far fa-clock"></i>
                  <%= record.date %>
                  <div class="record-status <%= record.status.toLowerCase().replace(/\s+/g, '-') %>"><%= record.status %></div>
                </div>
                <div class="record-times">
                  <div class="time-group">
                    <div class="time-label">Check In Time</div>
                    <div><%= record.check_in_time %></div>
                  </div>
                  <div class="time-group">
                    <div class="time-label">Check Out Time</div>
                    <div><%= record.check_out_time %></div>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } else { %>
            <p>No attendance records found.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>


<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  socket.on('rssiUpdate', (data) => {
    try {
      if (!data) return;

      document.getElementById('live-rssi').innerText = (data.rssi ?? '--').toFixed(2);
      document.getElementById('live-distance').innerText = (data.distance ?? '--').toFixed(2);
      document.getElementById('live-state').innerText = data.state || '--';
    } catch (err) {
      console.error("‚ö†Ô∏è Error processing RSSI update:", err);
    }
  });
</script>


</html>